        <TextBox x:Name="txtModKey2" HorizontalAlignment="Left" Height="18" Margin="139,112,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="46" KeyDown="txtModKey2_KeyDown"/>
        <TextBox x:Name="txtANKey" HorizontalAlignment="Left" Height="18" Margin="199,112,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="46" KeyDown="txtANKey_KeyDown"/>
