        <Label x:Name="lblProgramArgs" Content="Arguments:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,72,0,0" Height="27"/>
        <TextBox x:Name="txtProgramArgs" HorizontalAlignment="Left" Height="27" Margin="79,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="347" VerticalContentAlignment="Center" MaxLines="1"/>

    </Grid>
</Window>
