<Window x:Name="Add_Application" x:Class="NetRunner.AddProgram"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetRunner"
        mc:Ignorable="d"
        Title="Add New" Height="207.582" Width="557.662" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Topmost="True">
    <Grid Margin="0,0,0,-19">
        <Label x:Name="lblProgramName" Content="Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="35,8,0,0" Height="27" VerticalContentAlignment="Center"/>
        <TextBox x:Name="txtProgramName" HorizontalAlignment="Left" Height="27" Margin="79,8,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="233" VerticalContentAlignment="Center"/>
        <Label x:Name="lblProgramPath" Content="Path:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="43,40,0,0" Height="27"/>
        <TextBox x:Name="txtProgramPath" HorizontalAlignment="Left" Height="27" Margin="79,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="347" VerticalContentAlignment="Center" IsEnabled="False" MaxLines="1"/>
