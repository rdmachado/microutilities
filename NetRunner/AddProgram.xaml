        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="351,137,0,0" VerticalAlignment="Top" Width="75" Click="btnCancel_Click"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="271,137,0,0" VerticalAlignment="Top" Width="75" Click="btnSave_Click"/>
