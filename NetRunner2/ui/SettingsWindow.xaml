<Window x:Class="NetRunner2.ui.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetRunner2.ui"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="300" Width="300"
        Topmost="True" WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Vertical">

        <GroupBox Header="General" Padding="10 10 0 0" Width="275" Height="100" Margin="10 10 0 0" HorizontalAlignment="Left" VerticalAlignment="Top" >
            <CheckBox Content="Run automatically on startup" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </GroupBox>

        <GroupBox Header="Credentials" Padding="10 10 0 0" Width="275" Height="100" Margin="10 10 0 0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <ListBox Width="210" Height="60" HorizontalAlignment="Left" VerticalAlignment="Top">
                <ListBoxItem>DOMAIN@User</ListBoxItem>
                <ListBoxItem>DOMAIN@User</ListBoxItem>
                <ListBoxItem>DOMAIN@User</ListBoxItem>
                <ListBoxItem>DOMAIN@User</ListBoxItem>
            </ListBox>
        </GroupBox>

    </StackPanel>
</Window>
